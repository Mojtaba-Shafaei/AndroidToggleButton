<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/root"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize">

    <android.support.v7.widget.Toolbar
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:contentInsetEnd="0dp"
      app:contentInsetLeft="0dp"
      app:contentInsetRight="0dp"
      app:contentInsetStart="0dp">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
          android:id="@+id/btn_menu_more"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:background="@android:drawable/list_selector_background"
          android:src="@android:drawable/ic_menu_more"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:text="@string/app_name"
          android:textColor="@android:color/white"
          android:textSize="16sp"/>
      </RelativeLayout>
    </android.support.v7.widget.Toolbar>
  </android.support.design.widget.AppBarLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <com.mojtaba_shafaei.android.library.ToggleButton
      android:id="@+id/toggle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="start"
      app:tb_A_text="دکمه A"
      app:tb_B_text="دکمه B"
      app:tb_background_A_type="blue"
      app:tb_background_B_type="green"
      app:tb_default_button="A"
      app:tb_isMandatory="true"
      app:tb_layoutDirection="inherit"
      app:tb_title="عنوان"
      app:tb_titleTextColor="@color/colorPrimaryDark"
      app:tb_titleTextSize="16sp"/>

    <com.mojtaba_shafaei.android.library.ToggleButton
      android:id="@+id/tb3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      app:tb_A_text="'A' Button"
      app:tb_B_text="'B' Button"
      app:tb_isMandatory="true"
      app:tb_layoutDirection="ltr"
      app:tb_title="سلام"
      app:tb_titleTextSize="@dimen/titleTextSize"/>

    <com.mojtaba_shafaei.android.library.ToggleButton
      android:id="@+id/tb4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      app:tb_A_text="'A' Button"
      app:tb_B_text="'B' Button"
      app:tb_isMandatory="true"
      app:tb_layoutDirection="inherit"
      app:tb_title="Title..."
      app:tb_titleTextSize="@dimen/titleTextSize"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <Button
        android:id="@+id/btnRtl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RTL Layout"/>

      <Button
        android:id="@+id/btnLtr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LTR Layout"/>
    </LinearLayout>

    <Button
      android:id="@+id/btn_test_val"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="test"/>

  </LinearLayout>
</LinearLayout>
