<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ToggleButton">
        <attr name="tb_isMandatory" format="boolean"/>
        <attr name="tb_default_button" format="integer">
            <enum name="A" value="1"/>
            <enum name="B" value="0"/>
            <enum name="NONE" value="2"/>
        </attr>
        <attr name="tb_title" format="string"/>
        <attr name="tb_titleTextColor" format="color"/>
        <attr name="tb_titleTextSize" format="dimension"/>

        <attr name="tb_A_text" format="string"/>
        <attr name="tb_B_text" format="string"/>
        <attr name="tb_background_A" format="reference|color"/>
        <attr name="tb_background_B" format="reference|color"/>
    </declare-styleable>
</resources>